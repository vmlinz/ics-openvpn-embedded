<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/openvpn_stdpadding"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/openvpn_dialogHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/openvpn_enter_tlscn_dialog" />

        <TextView
            android:id="@+id/openvpn_tlsremotenote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:text="@string/openvpn_remotetlsnote"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/openvpn_x509verifytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/openvpn_tlsremotecn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="text" >

            <requestFocus />
        </EditText>

    </LinearLayout>

</ScrollView>
