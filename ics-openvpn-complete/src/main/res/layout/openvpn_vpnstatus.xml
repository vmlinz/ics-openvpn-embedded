<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android">

    <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:text="@string/openvpn_uploaded_data"
            style="@style/openvpn_logWindowStatusTitle"/>

    <TextView
            style="@style/openvpn_logWindowStatusText"
            android:id="@+id/openvpn_speedUp"
            tools:text="4 Mbit/s 6.7 GB"/>

    <TextView
            android:text="@string/openvpn_downloaded_data"
            style="@style/openvpn_logWindowStatusTitle"/>

    <TextView
            style="@style/openvpn_logWindowStatusText"
            android:id="@+id/openvpn_speedDown"
            tools:text="2 Mbit/s 4.7 GB"/>


    <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:text="@string/openvpn_vpn_status"
            style="@style/openvpn_logWindowStatusTitle"/>

    <TextView
            android:id="@+id/openvpn_speedStatus"
            tools:text="Connected"
            style="@style/openvpn_logWindowStatusText"/>


</merge>
